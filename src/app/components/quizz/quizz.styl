.quizz
  position relative
  z-index 95
  
  &:focus
    outline none
  
  .quizz-option
    position relative
    font-size 18px
    line-height 30px
    color grey
    font-weight bold
    
    &:focus
      outline none
    
    .quizz-option-radio
      position absolute
      left 0px
      top 0px
      width 30px
      height 30px
      border-radius 50%
      border 4px solid gold
      background white
      
      &:focus
        outline none
      
      &.selected
        &:after
          content ""
          position absolute
          width 12px
          height 12px
          border-radius 50%
          background blue
          left calc(50% - 6px)
          top calc(50% - 6px)
          
    .quizz-option-text
      position absolute
      left 30px
      top 0px
      padding-left 5px
      
      &:focus
        outline none
        