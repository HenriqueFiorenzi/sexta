.btn
  position relative
  padding 5px 15px
  color white
  background rgba(0,0,0,0.5)
  font-size 22px
  font-family "Roboto"
  font-weight 200
  
  &:hover, &:active, &:focus
    outline none
    color white
    background rgba(0,0,0,0.8)
  
  .btn-inside
    display inline-block
    line-height 32px
    vertical-align top
    margin-right 10px
  
  .img
    display none
    position relative
    width 32px
    height 32px

    &.tick
      display inline-block
      vertical-align top
      background url(../assets/images/default/botoes0013.png)
      background-size cover
      
    &.next
      display inline-block
      vertical-align top
      background url(../assets/images/default/botoes0001.png)
      background-size cover


  
  