//----------- slick default ---------------------

.slick-container
  position absolute
  left 0px
  top 0px
  width 1920px
  height auto

.slick
  position relative

  .slick-prev
    font-size 0
    border none
    outline none
    background transparent
    position absolute
    left 20px
    top calc(50% - 42px)
    width 31px
    height 85px
    z-index 10
    display none

    &.slick-disabled
      display none !important

  .slick-next
    font-size 0
    border none
    outline none
    background transparent
    position absolute
    right 30px
    top calc(50% - 42px)
    width 31px
    height 85px
    z-index 10
    animation 1s pulse infinite
    display none

    &.slick-disabled
      display none !important
      animation none

  .slick-list

    .slick-track

      .slick-slide
        position relative

        img
          position relative
          margin 0 auto

  ul.slick-dots
    position relative
    width 100%
    text-align center
    margin-top 15px
    padding 0

    li
      position relative
      display inline-block
      vertical-align middle
      cursor pointer
      width 30px
      height 30px
      margin 0 10px
      border none
      background transparent
      transform-origin center

      button
        display none

      &:after
        content ""
        position absolute
        left 3px
        top 0px
        width 24px
        height 24px
        border-radius 50%
        top 3px
        //border 2px solid #00778b
        background rgba(249,175,0,0.5)
        //box-shadow 1px 1px 3px 1px rgba(0,0,0,0.7)

      &.slick-active
        transform scale(1.4)

        &:after
          background rgba(249,175,0,1)
          top 2px
          width 26px
          height 26px
          left 2px
