          &.head-02
            background #00447d
            left 36%
            top 30%
          &.head-03
            background #084798
            left 54%
            top 30%
          &.head-04
            background #0070ba
            left 70%
            top 2%

          &.completed
            background #ffcb03

          &.selected
            background linear-gradient(90deg, #f8941f, #ffdd03)

    .container-fluid
      display block
      padding-top 16vh
