.tela.intros
  position relative
  left 0px
  top 0px
  width 100%
  height 100%

  .menu-bg
    position absolute
    left 0
    top 0
    width 100vw
    height calc(100 * var(--vh)) /* cross-browser */
    background url('../assets/images/px/bgs/bg_01.png')
    background-size cover
    background-position center
    background-attachment fixed
    overflow hidden

    #bg-video
      display block
      height auto
      left auto
      max-width none
      min-height 100%
      min-width 100%
      right auto
      position absolute
      top 0
      width auto
      left 50%
      top 50%
      transform translateX(-50%) translateY(-50%)

