.tela.mod4tela1
  position relative
  min-height 100%
  width 100%
  height 100% /* cross-browser */
  color black


  /*.mod4tela1-bg
    position fixed
    width 100%
    height 100%
    background url('../assets/images/px/formas/grafismos.png')
    background-size auto 100%
    background-position left top
